{
  "openapi": "3.1.1",
  "info": {
    "title": "xpcDeckTrucoBE API",
    "description": "Back-end with all the logic, authentication e persistence of the aplication.",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "https://localhost:7778/",
      "description": "HTTPS Local server."
    },
    {
      "url": "http://localhost:7777/",
      "description": "HTTP Local server."
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Unauthorized access, the access and password not match.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "BadRequestError": {
        "description": "The request do not pass the validations.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Log in.",
        "description": "Inform the username or e-mail (but not both), and password to login in the system.",
        "required": true,
        "tags": ["Authentication"],
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "test-username": {
                  "summary": "Example of a attempt of login with username.",
                  "value": {
                    "username": "puthereyourusername",
                    "password": "******"
                  }
                },
                "test-email": {
                  "summary": "Example of a attempt of login with e-mail.",
                  "value": {
                    "email": "puthere@youremail.com",
                    "password": "******"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON with the ID and JWT token of the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "jwtTok": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Sign up.",
        "description": "Inform the username, e-mail, rpAddress and password to register a new user in the system. You need to be logged in with an admin account to register a new user.",
        "required": true,
        "tags": ["Authentication"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "rpAddress": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "test": {
                  "summary": "Example of a attempt of signup with username.",
                  "value": {
                    "username": "puthereyourusername",
                    "email": "puthereyour@userna.me",
                    "password": "******"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON with the ID, JWT token and a message of the new user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "jwtTok": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "Security of application."
    }
  ]
}
