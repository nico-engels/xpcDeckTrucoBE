{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2021"]
  },
  "include": ["src/**/*"]
}
